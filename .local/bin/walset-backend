#!/bin/bash

# Check if the user provided an argument
if [ "$#" -ne 1 ]; then
	echo "Usage: $0 <path_to_image>"
	exit 1
fi

IMAGE="$1"

# Send notification to the user
notify-send -a "Matugen" "Changing Theme" "Applying new wallpaper and updating colors, please wait until confirmation..."

# Use Matugen to generate Material You colors
matugen image "$IMAGE"

swww img --transition-fps 60 --transition-step 255 --transition-type center $IMAGE

notify-send -a "Matugen" "Theme Applied" "Wallpaper and Theme updated successfully!"

